<div class="container">
    <h2 class="section__title">Наша команда</h2>
    <ul class="team">
        {{#each data.team}}
        <li class="team__item">
            <div class="card">
                <picture>
                    {{#each pic-source}}
                    <source srcset={{desctop}} media="(min-width: 1200px)">
                    <source srcset={{tablet}} media="(min-width: 768px)">
                    <source srcset={{mobile}} media="(max-width: 767px)">
                    {{/each}}
                    <img class="image image--margin" src={{image}} alt={{name}} width="450" />
                </picture>
                <h3 class="title card__title">{{name}}</h3>
                <p class="card__profession">{{prof}}</p>
                {{> socials soc-link }}
            </div>
        </li>
        {{/each}}
    </ul>
</div>